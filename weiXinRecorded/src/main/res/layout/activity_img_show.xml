<!--                    android:layout_width="20dp"-->
<!--                    android:layout_height="20dp"-->
<!--                    android:layout_centerInParent="true"-->
<!--                    android:src="@mipmap/cut_time" />-->
<!--            </RelativeLayout>-->
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="#dd2B2B2B"
        android:layout_above="@id/ll_bottom"
        android:orientation="horizontal">
        <View
            android:layout_width="1px"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="#3C3E40"/>
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="80dp"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/edit_delete"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="取消"
            android:textSize="18sp"
            android:textColor="#fff"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#3CAC57"
            android:layout_alignParentRight="true"
            android:text="完成"/>
        <EditText
            android:id="@+id/et_tag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textSize="24sp"
            android:layout_below="@id/tv_finish"
            android:textColor="#fff"
            android:gravity="top"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@null"/>
        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_centerInParent="true"
            android:textSize="24sp"
            android:textColor="#fff"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <TextureView
            android:id="@+id/textureView_cut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"/>
    </RelativeLayout>

    <com.zhaoss.weixinrecorded.view.CutView
        android:layout_marginBottom="50dp"
        android:id="@+id/activity_img_show_cut"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_hint_delete"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="双指可缩放旋转, 拖到此处可删除"
        android:background="#dd2B2B2B"
        android:visibility="gone"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>