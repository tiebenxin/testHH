<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_show_rl_big"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
        android:id="@+id/activity_img_show_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <com.zhaoss.weixinrecorded.view.MyPaintView
        android:id="@+id/activity_show_mypaintview"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#dd2B2B2B">
        <RelativeLayout
            android:id="@+id/rl_close"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/back"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:text="编辑照片"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#80353535"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="5"
            >
        <RelativeLayout
            android:id="@+id/rl_pen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/iv_pen"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/activity_video_edit_pan" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/activity_video_edit_face" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/activity_video_edit_text" />
        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_text_cut"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="23dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/activity_video_edit_cut" />
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2">

            <RelativeLayout
                android:id="@+id/rl_record_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
              >

                <ImageView
                    android:id="@+id/iv_show_delete"
                    android:layout_width="29dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:clickable="true"
                    android:visibility="gone"
                    android:background="@mipmap/video_cancle"/>
                    <TextView
                        android:id="@+id/tv_finish_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textSize="17sp"
                        android:textColor="#fff"
                        android:background="@drawable/yuanjiao"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:text="完成"/>
            </RelativeLayout>


