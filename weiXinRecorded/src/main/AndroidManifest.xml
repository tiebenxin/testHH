<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhaoss.weixinrecorded" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:supportsRtl="true">

        <activity android:name=".activity.RecordedActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".activity.RecordedLocalActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".activity.EditVideoActivity"
            android:windowSoftInputMode="adjustResize|adjustPan"
            android:screenOrientation="portrait"
            />
        <activity android:name=".activity.CutSizeActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".activity.CutTimeActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".activity.ImageShowActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.VideoPreviewActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
