<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_strike_src"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:background="@null"
        android:src="@mipmap/ic_launcher"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_strike_num"
        android:layout_width="wrap_content"
        android:minWidth="18dp"
        android:layout_height="19dp"
        android:layout_gravity="right|top"
        android:background="@drawable/shape_unread_bg2"
        android:gravity="center"
        android:paddingLeft="2dp"
        android:paddingTop="0dp"
        android:paddingRight="2dp"
        android:paddingBottom="0dp"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <!--        android:background="@drawable/bg_red_num"
-->

    <ImageView
        android:id="@+id/img_strike_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:background="@mipmap/bg_red_num_small"
        android:gravity="center"
        android:paddingLeft="2dp"
        android:paddingTop="0dp"
        android:paddingRight="2dp"
        android:paddingBottom="0dp"
        android:visibility="gone" />

</FrameLayout>