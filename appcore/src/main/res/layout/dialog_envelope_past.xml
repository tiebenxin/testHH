<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_13radius_solid_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="温馨提示"
            android:textColor="@color/c_000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:padding="4dp"
            android:src="@mipmap/ic_close" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:text="根据国家法律法规要求，你需要进行身份认证后，才能继续使用该功能。"
        android:textColor="@color/c_000000"
        android:textSize="15sp" />

    <View
        android:id="@+id/line_one"
        style="@style/app_line"
        android:layout_below="@+id/tv_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/line_one"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/c_828282"
            android:textSize="16sp"
            android:visibility="gone" />

        <View
            android:id="@+id/line_two"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/line_one"
            android:layout_toRightOf="@+id/tv_cancel"
            android:background="@color/c_f0f0f0" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/line_one"
            android:layout_toRightOf="@+id/line_two"
            android:layout_weight="1"
            android:gravity="center"
            android:text="知道了"
            android:textColor="@color/c_32b053"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>