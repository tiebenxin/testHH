<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_100"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_head"
        style="@style/app_img_head"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginTop="77dp" />


    <TextView
        android:id="@+id/tv_phone_number"
        style="@style/app_txt_title_2"
        android:textSize="17sp"
        android:layout_marginTop="17dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="63dp"
        android:layout_marginRight="21dp"
        android:orientation="horizontal">

        <TextView
            style="@style/app_txt_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码" />


        <net.cb.cb.library.view.ClearEditText
            android:id="@+id/et_password_content"
            style="@style/password_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColorHint="@color/gray_300" />

    </LinearLayout>

    <View
        style="@style/app_line"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="17dp"
        android:background="@color/green_500" />


    <TextView
        android:id="@+id/tv_identifying_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="18dp"
        android:text="使用短信验证码登录"
        android:textColor="@color/blue_600"
        android:textSize="11sp" />


    <Button
        android:id="@+id/btn_login"
        style="@style/app_btn_green"
        android:layout_width="310dp"
        android:layout_height="38dp"
        android:layout_marginTop="53dp"
        android:text="登录" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="21dp"
            android:text="忘记密码"
            android:textColor="@color/blue_600"
            android:textSize="11sp" />

        <View style="@style/app_line_portrait" />


        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="5dp"
            android:text="更多"
            android:textColor="@color/blue_600"
            android:textSize="11sp" />


    </LinearLayout>

</LinearLayout>