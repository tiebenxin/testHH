<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        style="@style/app_layout_list2_item"
        android:layout_width="match_parent"
        android:paddingRight="0dp"
        android:layout_height="@dimen/dimen_50">

        <CheckBox
            android:id="@+id/ck_select"
            style="@style/app_check_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@mipmap/img_chat_at_all" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:paddingRight="@dimen/app_margin_main"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="刘德华"
                    android:textColor="@color/color_121"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_cancle_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_10"
                    android:text="移除"
                    android:textColor="@color/red_400"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_exit_group_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="23:22退群"
                    android:paddingLeft="10dp"
                    android:textColor="@color/gray_300"
                    android:visibility="gone"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:id="@+id/view_line"
                style="@style/app_line"
                android:layout_marginLeft="16dp" />

        </LinearLayout>
    </LinearLayout>
</layout>
