<?xml version="1.0" encoding="utf-8"?>
<net.cb.cb.library.view.HeadView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/headView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_100"
    app:headview_title="实名认证">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/app_txt_content_1"
            android:layout_marginLeft="@dimen/app_margin_main"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="请确认您本人，验证完成后不可更改" />

        <LinearLayout style="@style/app_layout_list2_item">

            <TextView
                style="@style/app_txt_title_2"
                android:text="真实姓名"/>

            <EditText
                android:id="@+id/ed_name"
                style="@style/app_edt1"
                android:hint="请填写真实姓名"
                android:textSize="12sp"
                android:layout_marginLeft="13dp"/>

        </LinearLayout>

        <View
            style="@style/app_line"/>



        <LinearLayout style="@style/app_layout_list2_item">

            <TextView
                style="@style/app_txt_title_2"
                android:text="证件类型"/>

            <TextView
                style="@style/app_txt_title_2"
                android:text="身份证"
                android:textSize="12sp"
                android:layout_marginLeft="13dp"/>

        </LinearLayout>

        <View
            style="@style/app_line"/>


        <LinearLayout style="@style/app_layout_list2_item">

            <TextView
                style="@style/app_txt_title_2"
                android:text="证件号码"/>

            <EditText
                android:id="@+id/ed_identity"
                style="@style/app_edt1"
                android:hint="请填写证件号码"
                android:textSize="12sp"
                android:layout_marginLeft="13dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_commit"
            style="@style/app_btn_green"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="34dp"
            android:layout_marginRight="25dp"
            android:text="确认并提交" />

    </LinearLayout>

</net.cb.cb.library.view.HeadView>