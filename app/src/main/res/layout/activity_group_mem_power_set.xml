<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <net.cb.cb.library.view.HeadView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headview_title="群成员权限设置">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <!--禁止领取零钱红包-->
                <LinearLayout
                    android:visibility="visible"
                    style="@style/app_layout_list2_item">

                    <TextView
                        style="@style/app_txt_title_2"
                        android:layout_marginRight="@dimen/app_margin_item"
                        android:layout_weight="1"
                        android:text="禁止领取零钱红包" />

                    <CheckBox
                        android:id="@+id/ck_ban_money"
                        style="@style/app_check" />
                </LinearLayout>

                <View style="@style/app_line"/>

                <!--禁言设置-->
                <LinearLayout
                    android:id="@+id/layout_setup"
                    style="@style/app_layout_list2_item">

                    <TextView
                        style="@style/app_txt_title_2"
                        android:layout_marginRight="@dimen/app_margin_item"
                        android:layout_weight="1"
                        android:text="禁言设置" />
                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_300"
                        android:text="无"
                        android:layout_marginRight="15dp"
                        android:textSize="@dimen/dimen_16" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_btn_goto" />
                </LinearLayout>
        </LinearLayout>
    </net.cb.cb.library.view.HeadView>
</layout>