<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout

        style="@style/app_layout_list1">

        <LinearLayout
            android:id="@+id/view_it"
            style="@style/app_layout_list1_item">

            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp">
                <com.yanlong.im.wight.avatar.MultiImageView
                    android:id="@+id/img_head"
                    style="@style/app_img_head"
                    android:background="@drawable/bg_head_gray_shape"
                    android:layout_gravity="center|left"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_margin_item"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name"
                    style="@style/app_txt_title_2"
                    android:text="xxxx" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/selector_list_bg"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>


    <View style="@style/app_line" />
</LinearLayout>