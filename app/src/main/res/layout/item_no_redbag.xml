<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_e9e"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="35dp"
                android:src="@mipmap/img_chat_at_all"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/color_121"
                android:text="刘德华"
                android:layout_marginLeft="14dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txt_cancle_manager"
                android:layout_width="wrap_content"
                android:text="06:56"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginRight="16dp"
                android:textColor="@color/color_9e9"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- 红包消息-->
        <LinearLayout
            android:id="@+id/layout_red_bag"
            android:layout_width="217dp"
            android:layout_height="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/bg_chat_other_rp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/img_ot_rb_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_rb_zfb_un" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_margin_item"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_ot_rb_title"
                        style="@style/app_txt_title_2"
                        android:text="财源滚滚，大富大贵"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_ot_rb_info"
                        style="@style/app_txt_content_1"
                        android:layout_marginTop="5dp"
                        android:text="领取红包"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/txt_ot_rp_bt"
                    style="@style/app_txt_content_1"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="支付宝红包" />

                <ImageView
                    android:id="@+id/img_ot_rb_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@mipmap/ic_rb_zfb" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/app_line"
            android:background="#d4d8da"/>
    </LinearLayout>
</layout>