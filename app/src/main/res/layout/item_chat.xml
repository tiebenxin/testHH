<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/app_margin_main"
    android:paddingRight="@dimen/app_margin_main">

    <LinearLayout
        android:id="@+id/view_ot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="57dp">

        <ImageView
            android:id="@+id/img_ot_head"
            style="@style/app_img_head"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:id="@+id/view_ot_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_ot_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chat_other"
                android:text="我已经添加你为好友啦!/n我已经添加你为好友啦!我已经添加你为好友啦!我已经添加你为好友啦!我已经添加你为好友啦!我已经添加你为好友啦!我已经添加你为好友啦!"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/view_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="57dp">


        <LinearLayout
            android:id="@+id/view_me_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:gravity="right">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_me_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chat_me"
                android:text="我已经添加你为好友啦"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_me_head"
            style="@style/app_img_head"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>
</LinearLayout>