<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_search"
    android:layout_marginTop="0dp"
    style="@style/app_layout_list2"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">


    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/shape_search_bg"
        android:layout_marginBottom="10dp"
        style="@style/app_layout_list2_item_search">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:src="@mipmap/ic_msg_search" />

        <net.cb.cb.library.view.ClearEditText
            android:id="@+id/edt_search"
            style="@style/app_edt1"
            android:hint="搜索"
            android:focusable="false"
            android:background="@color/transparent"
            android:imeOptions="actionSearch" />


    </LinearLayout>

    <View style="@style/app_line"/>

    <LinearLayout
        android:id="@+id/view_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffeeee"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/app_margin_item"
            android:paddingRight="@dimen/app_margin_item">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/app_margin_item_top"
                android:src="@mipmap/ic_net_err" />

            <TextView
                style="@style/app_txt_title_2"
                android:text="当前网络不可用，请检查你的网络设置。"
                android:textColor="#76716e" />

        </LinearLayout>

        <View style="@style/app_line" />
    </LinearLayout>
</LinearLayout>