<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="300dp"
    android:background="@drawable/shape_13radius_solid_ffffff"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/ic_close_one" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_close"
            android:layout_weight="1"
            android:text="请输入支付密码"
            android:textColor="@color/c_000000"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="零钱红包"
        android:textColor="@color/c_000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="¥0.00"
        android:textColor="@color/c_000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <View style="@style/app_line" />

    <LinearLayout
        android:id="@+id/ll_pay_style"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@+id/line_one"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="支付方式"
            android:textColor="@color/c_868686"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginLeft="23dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_loose" />

        <TextView
            android:id="@+id/tv_payer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="零钱"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="18dp"
            android:src="@mipmap/ic_right_arrow_one" />
    </LinearLayout>

    <View style="@style/app_line" />


    <com.hm.cxpay.widget.PswView
        android:id="@+id/psw_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/line_two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:cursorVisible="false"
        android:focusable="true"
        android:inputType="number"
        android:maxLength="6"
        app:borderColor="@color/c_f0f0f0"
        app:borderRadius="5dp"
        app:borderWidth="1dp"
        app:passwordColor="@color/c_000000"
        app:passwordLength="6"
        app:passwordWidth="5dp" />


</LinearLayout>