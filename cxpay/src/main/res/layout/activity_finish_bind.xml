<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <net.cb.cb.library.view.HeadView
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headview_title="添加银行卡">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center"
                android:paddingBottom="30dp"
                android:paddingTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0f0f0f"
                    android:textSize="14sp"
                    android:text="接收验证码手机号："/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#868686"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:text="绑定银行卡需要进行短信验证"/>




            </LinearLayout>

            <LinearLayout
                style="@style/app_layout_list2_item"
                android:layout_marginTop="3dp">

                <TextView
                    style="@style/app_txt_title_2"
                    android:layout_width="80dp"
                    android:text="验证码" />

                <EditText
                    android:id="@+id/et_code"
                    style="@style/app_txt_title_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:textColorHint="@color/gray_300" />


                <TextView
                    android:id="@+id/tv_get_verification_code"
                    style="@style/app_txt_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:textColor="@color/green_600"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/et_code" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:text="下一步"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:textSize="18sp"
                android:background="@drawable/shape_5radius_solid_32b053"
                android:textColor="@color/white"/>


        </LinearLayout>

    </net.cb.cb.library.view.HeadView>
</layout>