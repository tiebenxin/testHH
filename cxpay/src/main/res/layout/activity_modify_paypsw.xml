<net.cb.cb.library.view.HeadView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/headView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:headview_title="修改支付密码">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_old_payword"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_title_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="旧支付密码"
                android:layout_centerVertical="true"
                android:textColor="@color/c_0f0f0f"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_old_payword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_title_three"
                android:layout_toLeftOf="@+id/iv_clear_payword_three"
                android:background="@null"
                android:hint="请输入旧支付密码"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="14sp"
                android:textColorHint="@color/c_868686"
                android:textColor="@color/c_0f0f0f"
                />

            <ImageView
                android:id="@+id/iv_clear_payword_three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="26dp"
                android:paddingLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:src="@mipmap/ic_clear_psw"/>
        </RelativeLayout>
        <View style="@style/money_change_line"
            android:layout_below="@+id/layout_change_bankcard"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_title_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="新支付密码"
                android:layout_centerVertical="true"
                android:textColor="@color/c_0f0f0f"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_payword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_title_one"
                android:layout_toLeftOf="@+id/iv_clear_payword_one"
                android:background="@null"
                android:hint="请输入6位新支付密码"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="14sp"
                android:textColorHint="@color/c_868686"
                android:textColor="@color/c_0f0f0f"
                />

            <ImageView
                android:id="@+id/iv_clear_payword_one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="26dp"
                android:paddingLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:src="@mipmap/ic_clear_psw"/>
        </RelativeLayout>

        <View style="@style/money_change_line"
            android:id="@+id/line_one"
            android:layout_below="@+id/layout_change_bankcard"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_title_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="新密码确认"
                android:layout_centerVertical="true"
                android:textColor="@color/c_0f0f0f"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_confirm_payword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_title_two"
                android:layout_toLeftOf="@+id/iv_clear_payword_two"
                android:background="@null"
                android:hint="请再次输入新支付密码"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="14sp"
                android:textColorHint="@color/c_868686"
                android:textColor="@color/c_0f0f0f"
                />

            <ImageView
                android:id="@+id/iv_clear_payword_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="26dp"
                android:paddingLeft="15dp"
                android:visibility="invisible"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_clear_psw"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/c_868686"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="14dp"
            android:text="支付密码仅支持6位，且仅支持数字"/>


        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="322dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="确认"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_below="@+id/line_three"
            android:background="@drawable/shape_5radius_solid_32b053"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_submit_from_forget"
            android:layout_width="322dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:text="确认提交"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_below="@+id/line_three"
            android:background="@drawable/shape_5radius_solid_32b053"
            android:textColor="@color/white"/>
    </LinearLayout>
</net.cb.cb.library.view.HeadView>