<?xml version="1.0" encoding="utf-8"?>
<net.cb.cb.library.view.HeadView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/headView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:headview_title="填写银行卡信息">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/app_txt_content_1"
            android:layout_marginLeft="@dimen/app_margin_main"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="请输入银行预留手机号"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="卡类型"
                android:textColor="@color/c_0f0f0f"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_card_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="13dp"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/c_0f0f0f"
                android:textSize="16sp" />
        </LinearLayout>

        <View style="@style/money_change_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="手机号"
                android:textColor="@color/c_0f0f0f"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="13dp"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:hint="请输入手机号"
                android:maxLines="1"
                android:inputType="number"
                android:textColor="@color/c_0f0f0f"
                android:textSize="16sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:paddingLeft="30dp">

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/selector_check_box" />

            <TextView
                android:id="@+id/tv_text_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="同意"
                android:layout_toRightOf="@+id/iv_check"
                android:layout_centerVertical="true"
                android:textColor="#868686"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_text_one"
                android:layout_centerVertical="true"
                android:text="《用户服务协议》"
                android:textColor="#374882"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_view_support"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="查看支持银行"
                android:textColor="#374882"
                android:textSize="14sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="322dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="下一步"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:textSize="18sp"
            android:background="@drawable/shape_5radius_solid_32b053"
            android:textColor="@color/white"/>

    </LinearLayout>

</net.cb.cb.library.view.HeadView>
