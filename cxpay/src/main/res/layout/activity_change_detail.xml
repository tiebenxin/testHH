<net.cb.cb.library.view.HeadView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/headView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:headview_title="零钱详情">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textColor="@color/c_0f0f0f"
                android:layout_marginTop="20dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="¥0.00"
                android:textColor="@color/c_0f0f0f"
                android:textSize="16sp" />


            <View
                style="@style/money_change_line"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/title_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型：　　"
                    android:textColor="@color/c_868686"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/title_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_tv_type"
                    android:layout_marginTop="15dp"
                    android:text="充值时间："
                    android:textColor="@color/c_868686"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/title_tv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_tv_time"
                    android:layout_marginTop="15dp"
                    android:text="交易单号："
                    android:textColor="@color/c_868686"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/title_tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_tv_order_id"
                    android:layout_marginTop="15dp"
                    android:text="零钱余额："
                    android:textColor="@color/c_868686"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/title_tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_tv_balance"
                    android:layout_marginTop="15dp"
                    android:text="备注：　　"
                    android:textColor="@color/c_868686"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/title_tv_type"
                    android:text=""
                    android:textColor="@color/c_000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_type"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/title_tv_time"
                    android:text=""
                    android:textColor="@color/c_000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/title_tv_order_id"
                    android:text=""
                    android:textColor="@color/c_000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_order_id"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/title_tv_balance"
                    android:text=""
                    android:textColor="@color/c_000000"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_balance"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/title_tv_remark"
                    android:text=""
                    android:textColor="@color/c_000000"
                    android:textSize="13sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/c_f6f6f6" />

            <RelativeLayout
                android:id="@+id/layout_question"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:text="常见问题"
                    android:textColor="@color/c_0f0f0f"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/ic_right_arrow_one" />


            </RelativeLayout>


        </LinearLayout>


</net.cb.cb.library.view.HeadView>